<?xml version="1.0" encoding="UTF-8"?>
<project name="recommendationsystem_maven" default="all">
  
  
  <property file="recommendationsystem_maven.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.ear"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/packager.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.java-json.classpath">
    <pathelement location="${basedir}/java-json.jar"/>
    <pathelement location="${basedir}/json-simple-1.1.1.jar"/>
  </path>
  
  <path id="library.pdfbox-2.0.8.classpath">
    <pathelement location="${basedir}/../../Downloads/pdfbox-2.0.8.jar"/>
    <pathelement location="${basedir}/../../Downloads/pdfbox-tools-2.0.8.jar"/>
  </path>
  
  <path id="library.tika-server-1.20.classpath">
    <pathelement location="${basedir}/../../Downloads/tika-server-1.20.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module RecommendationSystem -->
  
  <dirname property="module.recommendationsystem.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.recommendationsystem" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.recommendationsystem" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.recommendationsystem" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.recommendationsystem" value="-encoding UTF-8 -source 8 -target 1.8 ${compiler.args}"/>
  
  <property name="recommendationsystem.output.dir" value="${module.recommendationsystem.basedir}/target/classes"/>
  <property name="recommendationsystem.testoutput.dir" value="${module.recommendationsystem.basedir}/target/test-classes"/>
  
  <path id="recommendationsystem.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="recommendationsystem.module.production.classpath">
    <path refid="${module.jdk.classpath.recommendationsystem}"/>
    <path refid="library.java-json.classpath"/>
    <path refid="library.pdfbox-2.0.8.classpath"/>
    <path refid="library.tika-server-1.20.classpath"/>
  </path>
  
  <path id="recommendationsystem.runtime.production.module.classpath">
    <pathelement location="${recommendationsystem.output.dir}"/>
    <path refid="library.java-json.classpath"/>
    <path refid="library.pdfbox-2.0.8.classpath"/>
    <path refid="library.tika-server-1.20.classpath"/>
  </path>
  
  <path id="recommendationsystem.module.classpath">
    <path refid="${module.jdk.classpath.recommendationsystem}"/>
    <pathelement location="${recommendationsystem.output.dir}"/>
    <path refid="library.java-json.classpath"/>
    <path refid="library.pdfbox-2.0.8.classpath"/>
    <path refid="library.tika-server-1.20.classpath"/>
  </path>
  
  <path id="recommendationsystem.runtime.module.classpath">
    <pathelement location="${recommendationsystem.testoutput.dir}"/>
    <pathelement location="${recommendationsystem.output.dir}"/>
    <path refid="library.java-json.classpath"/>
    <path refid="library.pdfbox-2.0.8.classpath"/>
    <path refid="library.tika-server-1.20.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.recommendationsystem">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.recommendationsystem">
    <patternset refid="excluded.from.module.recommendationsystem"/>
  </patternset>
  
  <path id="recommendationsystem.module.sourcepath">
    <dirset dir="${module.recommendationsystem.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="recommendationsystem.module.test.sourcepath">
    <dirset dir="${module.recommendationsystem.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.recommendationsystem" depends="compile.module.recommendationsystem.production,compile.module.recommendationsystem.tests" description="Compile module RecommendationSystem"/>
  
  <target name="compile.module.recommendationsystem.production" depends="register.custom.compilers" description="Compile module RecommendationSystem; production classes">
    <mkdir dir="${recommendationsystem.output.dir}"/>
    <javac2 destdir="${recommendationsystem.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.recommendationsystem}/javac">
      <compilerarg line="${compiler.args.recommendationsystem}"/>
      <bootclasspath refid="recommendationsystem.module.bootclasspath"/>
      <classpath refid="recommendationsystem.module.production.classpath"/>
      <src refid="recommendationsystem.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.recommendationsystem"/>
    </javac2>
    
    <copy todir="${recommendationsystem.output.dir}">
      <fileset dir="${module.recommendationsystem.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.recommendationsystem.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.recommendationsystem.tests" depends="register.custom.compilers,compile.module.recommendationsystem.production" description="compile module RecommendationSystem; test classes" unless="skip.tests">
    <mkdir dir="${recommendationsystem.testoutput.dir}"/>
    <javac2 destdir="${recommendationsystem.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.recommendationsystem}/javac">
      <compilerarg line="${compiler.args.recommendationsystem}"/>
      <bootclasspath refid="recommendationsystem.module.bootclasspath"/>
      <classpath refid="recommendationsystem.module.classpath"/>
      <src refid="recommendationsystem.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.recommendationsystem"/>
    </javac2>
    
    <copy todir="${recommendationsystem.testoutput.dir}">
      <fileset dir="${module.recommendationsystem.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.recommendationsystem" description="cleanup module">
    <delete dir="${recommendationsystem.output.dir}"/>
    <delete dir="${recommendationsystem.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.recommendationsystem" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.recommendationsystem" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>